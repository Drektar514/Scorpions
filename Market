using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Market__HomeWork3_
{
    class Program
    {
        static void Main(string[] args)
        {
            int gold;
            int cristals;
            int cristalsPrice = 15;
            bool enoghtGold;
            Console.WriteLine($"Добро пожаловать в наш магазин, сегодня у нас кристалы по {cristalsPrice}");
            Console.Write("Сколько у вас золота: ");
            gold = Convert.ToInt32(Console.ReadLine());
            Console.Write("Сколько кристалов, вы хотите купить: ");
            cristals = Convert.ToInt32(Console.ReadLine());
            enoghtGold = gold >= cristals * cristalsPrice;
            cristals *= Convert.ToInt32(enoghtGold);
            gold -= cristals * cristalsPrice;
            Console.WriteLine($"Теперь у вас {cristals} кристалов и {gold} золота");
        }
    }
}
